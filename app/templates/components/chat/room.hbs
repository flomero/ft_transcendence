<div class="chat-room flex items-center p-3 rounded-lg cursor-pointer mb-2 {{#if room.selected}}bg-gray-200{{/if}}" data-room-id="{{room.id}}" data-read="{{room.read}}" onclick="selectRoom(event)">
    <div class="chat-room-name font-medium text-gray-700">
        {{room.name}}
        {{#unless room.read}}
            <span class="ml-2 bg-blue-500 text-white text-xs px-2 py-1 rounded-full">New</span>
        {{/unless}}
    </div>
</div>