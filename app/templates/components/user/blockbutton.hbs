<div class="block-button-container">
  {{!-- Block Button --}}
  {{#> components/button 
    variant="destructive" 
    data-id=userId 
    onclick="friendsManager.blockUserWithAnimation" 
    class=(when isBlocked "hidden")
  }}
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-user-round-x"><path d="M2 21a8 8 0 0 1 11.873-7"/><circle cx="10" cy="8" r="5"/><path d="m17 17 5 5"/><path d="m22 17-5 5"/></svg>
    {{#if showText}}Block User{{/if}}
  {{/components/button}}

  {{!-- Unblock Button --}}
  {{#> components/button 
    variant="outline" 
    data-id=userId 
    onclick="friendsManager.unblockUserWithAnimation" 
    class=(when (not isBlocked) "hidden")
  }}
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 21a8 8 0 0 1 11.873-7"/><circle cx="10" cy="8" r="5"/><path d="m16 19 2-2"/><path d="m20 15-2 2"/></svg>
    {{#if showText}}Unblock User{{/if}}
  {{/components/button}}
</div>