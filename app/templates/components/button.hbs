{{! 
  Button Component
  @param {String} [url] - Optional URL for link buttons
  @param {String} [variant="primary"] - Button style variant: "primary", "secondary", "danger", "success", "outline"
  @param {String} [onClick] - JavaScript function name to call on click (for <button> only)
  @param {String} [id] - Optional ID attribute
  @param {Boolean} [disabled] - Whether button should be disabled
  @param {String} [class] - Additional CSS classes to apply
  @param {Boolean} [spaIgnore] - Whether to bypass the SPA router (for links only)
}}

{{#if url}}
<a href="{{url}}" 
  class="{{twMerge 'rounded-lg transition-colors w-fit block px-4 py-2' (buttonVariants variant) (when disabled 'opacity-50 cursor-not-allowed') class}}"
  {{#if id}}id="{{id}}"{{/if}}
  {{#if disabled}}aria-disabled="true" tabindex="-1"{{/if}}
  {{#if spaIgnore}}data-spa-ignore="true"{{/if}}>
  {{> @partial-block }}
</a>
{{else}}
<button 
  class="{{twMerge 'rounded-lg transition-colors w-fit px-4 py-2' (buttonVariants variant) (when disabled 'opacity-50 cursor-not-allowed') class}}"
  {{#if id}}id="{{id}}"{{/if}}
  {{#if disabled}}disabled{{/if}}
  {{#if aria-label}}aria-label="{{aria-label}}"{{/if}}
  {{#if onClick}}onclick="{{onClick}}(event)"{{/if}}>
  {{> @partial-block }}
</button>
{{/if}}