<div class="mx-auto flex max-w-md flex-col items-center justify-center p-6">
  <form
    class="w-full flex gap-4 items-center justify-center flex-col group"
    action="/idk"
    method="POST"
  >
    <input
      type="text"
      maxlength="6"
      autocomplete="off"
      placeholder="Enter 6-digit code"
      pattern="[0-9]{6}"
      class="focus:ring-primary w-full rounded-md border px-4 py-2 text-center text-2xl tracking-widest focus:border-transparent focus:ring-2 focus:outline-none"
      required
    />

    {{#> components/button type="submit" class="group-invalid:cursor-not-allowed group-invalid:opacity-50" variant="primary"}}
      Join Lobby
    {{/components/button}}
  </form>
</div>