<div id="bracket"
     class="flex flex-row justify-around border relative p-4 w-600">

  {{!-- one column per round --}}
  {{#each rounds as |round r|}}
    <div class="w-80 flex flex-col justify-around">
      {{#each round as |match i|}}
        <div id="{{match.id}}"
             class="match border bg-black-200">
          {{match.teamA}} vs {{match.teamB}}
        </div>
      {{/each}}
    </div>
  {{/each}}

  <svg id="lines"
       class="absolute inset-0 pointer-events-none select-none"></svg>
</div>

<script>
  window.__ROUNDS__       = {{{json rounds}}};
  window.__CONNECTIONS__  = {{{json connectionConfig}}};
</script>

<!-- always load as ES‑module so `export {}` in TS compiles cleanly -->
<script type="module" src="public/js/tournament.js"></script>
