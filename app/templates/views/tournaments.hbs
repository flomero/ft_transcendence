{{#each tournaments as |tournament|}}
  <div class="mb-8">
    <div class="mb-4">
      <h2 class="text-xl font-bold">Tournament {{tournament.id}}</h2>
      <div class="text-sm text-gray-600">
        <span>Type: {{tournament.type}}</span> |
        <span>Players: {{tournament.playerCount}}</span> |
        <span>Status: {{tournament.state}}</span>
      </div>
    </div>

    {{> components/tournament-view/tournament-bracket tournament=tournament}}
  </div>
{{/each}}

<script>
  window.__TOURNAMENTS__ = {{{json tournaments}}};
</script>
