<div id="bracket"
     class="flex flex-row justify-around relative">
  {{!-- one column per round --}}
  {{#each rounds as |round r|}}
    <div class="flex flex-col justify-around">
      {{#each round as |match i|}}
        <div id="{{match.id}}"
             class="match border bg-black-200 mt-2 mb-2 p-2 rounded-lg">
          {{match.teamA}} vs {{match.teamB}}
        </div>
      {{/each}}
    </div>
  {{/each}}

  <svg id="lines"
       class="absolute inset-0 pointer-events-none select-none"></svg>
</div>

<script>
  window.__ROUNDS__ = {{{json rounds}}};
  window.__CONNECTIONS__ = {{{json connectionConfig}}};
</script>

