<div class="overflow-auto max-h-screen">
  <div
    id="bracket"
    class="relative flex flex-row gap-8 p-4 font-mono text-xs min-w-min"
  >
    {{! — rounds — }}
    {{#each rounds as |round r|}}
      <div
        class="border rounded-lg p-2 pb-6 min-w-[200px] max-w-[300px] flex-shrink-0"
      >
        <div class="text-center">{{round.name}}</div>
        <div class="flex flex-col justify-around h-full">
          {{#each round.matches as |match i|}}
            {{> components/tournament-view/match match=match}}
          {{/each}}
        </div>
      </div>
    {{/each}}

    <svg
      id="lines"
      class="absolute top-0 left-0 pointer-events-none select-none"
    ></svg>
  </div>
</div>


<script>
  window.__ROUNDS__ = {{{json rounds}}};
  window.__CONNECTIONS__ = {{{json connectionConfig}}};
</script>
