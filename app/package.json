{
  "name": "ft_transcendence",
  "version": "1.0.0",
  "description": "",
  "main": "app.ts",
  "scripts": {
    "start": "npm run build:ts && npm run build:client && npm run build:tailwind && fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "build:client": "tsc -p tsconfig.client.json",
    "watch:client": "tsc -p tsconfig.client.json -w",
    "dev": "npm run build:ts && npm run build:client && npm run build:tailwind && concurrently -k -p \"[{name}]\" -n \"TypeScript,ClientTS,App,Tailwind\" -c \"yellow.bold,blue.bold,cyan.bold,green.bold\" \"npm:watch:ts\" \"npm:watch:client\" \"npm:dev:start\" \"npm:watch:tailwind\"",
    "dev:start": "fastify start --ignore-watch='node_modules dist database' -w -l trace -P dist/app.js",
    "build:tailwind": "npx @tailwindcss/cli -i ./assets/app.css -o ./public/app.css",
    "watch:tailwind": "npx @tailwindcss/cli -i ./assets/app.css -o ./public/app.css --watch",
    "lint": "npx prettier . --write --no-error-on-unmatched-pattern",
    "lint:check": "npx prettier . --check",
    "prepare": "cd .. && husky app/.husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.1.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/jwt": "^9.0.4",
    "@fastify/multipart": "^9.0.3",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/sensible": "^6.0.3",
    "@fastify/static": "^8.1.1",
    "@fastify/view": "^10.0.2",
    "@fastify/websocket": "^11.0.2",
    "@tailwindcss/cli": "^4.0.9",
    "fastify": "^5.2.1",
    "fastify-cli": "^7.3.0",
    "fastify-plugin": "^5.0.1",
    "fluent-json-schema": "^5.0.0",
    "handlebars": "^4.7.8",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.9"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "@types/ws": "^8.5.14",
    "c8": "^10.1.3",
    "concurrently": "^9.1.2",
    "fastify-tsconfig": "^3.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
